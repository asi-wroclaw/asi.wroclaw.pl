---
pageable: true
per_page: 10
---
<h1 class="mb-4 asi-primary-text">Aktualności</h1>

<div class="asi-post-list">
  <% page_articles.each_with_index do |article, _i| %>
    <article class="asi-post card mb-4 shadow-sm border-0 rounded-4">
      <div class="card-body">
        <div class="d-flex flex-column flex-md-row justify-content-between align-items-md-center mb-2">
          <h3 class="card-title mb-0">
            <%= link_to article.title, article %>
          </h3>
          <small class="post-date ms-md-3"><%= I18n.localize(article.date, format: '%Y-%m-%d') %></small>
        </div>
        <div class="card-text"><%= article.summary(250) %></div>
        <div class="mt-3">
          <%= link_to 'Czytaj więcej', article, class: 'btn btn-sm asi-news-readmore' %>
        </div>
      </div>
    </article>
  <% end %>
</div>

<%= partial 'shared/pagination' %>
