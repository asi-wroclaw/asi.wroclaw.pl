---
pageable: true
per_page: 10
---
<div class="asi-post-list">
  <% page_articles.each_with_index do |article, _i| %>
    <article class="asi-post card mb-4 shadow-sm border-0 rounded-4">
      <div class="card-body">
        <div class="d-flex flex-column flex-md-row justify-content-between align-items-md-center mb-2">
          <h3 class="card-title mb-0">
            <%= link_to article.title, article %>
          </h3>
          <small class="post-date text-muted ms-md-3"><%= I18n.localize(article.date, format: '%Y-%m-%d') %></small>
        </div>
        <div class="card-text"><%= article.summary(250) %></div>
      </div>
    </article>
  <% end %>
</div>

<% if paginate && num_pages > 1 %>
  <nav aria-label="Paginacja" class="mt-4">
    <ul class="pagination justify-content-center">
      <% if prev_page %>
        <li class="page-item">
          <%= link_to 'Poprzednia', prev_page, class: "page-link" %>
        </li>
      <% end %>
      <li class="page-item disabled">
        <span class="page-link">Strona <%= page_number %> z <%= num_pages %></span>
      </li>
      <% if next_page %>
        <li class="page-item">
          <%= link_to 'NastÄ™pna', next_page, class: "page-link" %>
        </li>
      <% end %>
    </ul>
  </nav>
<% end %>
